<% if book.user_id != current_user.id %>
  <% if book.favorites.present? %>
    <%= link_to book_favorites_path(book), remote: true, method: :delete do %>
      <i class="fas fa-heart text-secondary"></i> いいね！取り消し
    <% end %>
  <% else %>
    <%= link_to book_favorites_path(book), remote: true, method: :post do %>
      <i class="fas fa-heart text-danger"></i> いいね！
    <% end %>
  <% end %>
<% end %>